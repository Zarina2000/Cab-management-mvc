    <link rel="stylesheet" href="style.css">

    <style>
        .navbar-nav a {
            color: white;
              font-size: 18px;
        }
        .heading{
            margin-bottom: 30px;
        }
        button{
            background-color: black;
            color: white;
            margin-left: 20px;
            height: 50px;
        }
        a :hover{
            color: yellow;
        }
       
      .container{
        margin-top: 30px;
      }
