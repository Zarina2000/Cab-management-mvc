</head>

<body>

    <!-- Navbar -->
    
 <nav class="navbar navbar-expand-lg bg-dark">
        <div class="container-fluid ">
            <a class="navbar-brand text-white" href="#">CAB SERVICE</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="/index">Home</a>
                    </li>
                    <li class="nav-item">
                       <a class="nav-link" href="/myride">My Ride</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/booking">Booking</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/registration" style="margin-left: 1000px;">Sign Up</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <!-- Navbar end -->
    <body>
<div class="container">
    <a href="/prebooking" class="btn btn-primary">+ Schedule Book</a>
    <table class="table table-striped mt-4">
        <tr>
            <th>Booking_Id</th>
            <th>Pickup Point</th>
            <th>Destination</th>
            <th>Date</th>
            <th>Time</th>
            <th>Passengers</th>
             <th>Action</th>
        </tr>
        {{#each data}}
        <tr>
            <td>{{this.dataValues.booking_id}}</td>
            <td>{{this.dataValues.pickup_point}}</td>
            <td>{{this.dataValues.destination}}</td>
            <td>{{this.dataValues.date}}</td>
            <td>{{this.dataValues.time}}</td>
            <td>{{this.dataValues.pasengerNumber}}</td>
            <td>
                <a href="/update/{{this.dataValues.booking_id}}">Edit</a> |
                <a href="/delete/{{this.dataValues.booking_id}}" class="text-danger" onclick="return confirm('Are you sure you want to delete this')">Delete</a>
            </td>
        </tr>
        {{/each}}
    </table>
    {{!-- <p class="text-end">You are logged in as: 
        <b>{{identity.firstName}} {{identity.lastName}}</b>
    </p> --}}
    </div>
    </body>
